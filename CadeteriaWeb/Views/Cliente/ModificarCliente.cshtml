@{
    ViewData["Title"] = "Modificar Cliente";
}

@model CadeteriaWeb.Models.ViewModels.ModificarClienteViewModel


    <div class="text-center">
    <h1 class="display-4">INGRESAR DATOS DEL CLIENTE </h1>
    <form asp-controller="Cliente" asp-action="ModificarCliente" method="post">
        <input type ="hidden" name="Id" value="@Model.IdCliente" />
        <label for="nombre" class="form-label"> Nombre </label>
        <input type="text"  class="form-control" id="nombre" name="nombre" required placeholder="Juan Perez" value="@Model.Nombre">
        <label for="direccion" class="form-label"> Direccion </label>
        <input type="text"  class="form-control" id="direccion" name="direccion" required placeholder="San Martin 125" value="@Model.Direccion">

          <label for="telefono" class="form-label"> Telefono </label>
        <input type="text"  class="form-control" id="telefono" name="telefono" required placeholder="381-15" value="@Model.Telefono" >

   

        <button type="submit" class="btn brn-primary">Ingresar</button>

    </form>
   
</div>